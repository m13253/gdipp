<?xml version="1.0" encoding="UTF-8" ?>
<gdipp>
	<gdimm>
		<process name="sample\.exe">
			<gamma>
				<gray>1.2</gray>
				<red>1.2</red>
				<green>1.1</green>
			</gamma>
		</process>
		
		<font name="sample_font.*">
			<freetype_loader>0</freetype_loader>
		</font>
		
		<font name=".*">
			<auto_hinting>0</auto_hinting>
			<embedded_bitmap>0</embedded_bitmap>
			<embolden>0.0</embolden>
			<freetype_loader>1</freetype_loader>
			<gamma>
				<gray>1.0</gray>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</gamma>
			<hinting>1</hinting>
			<lcd_filter>1</lcd_filter>
			<light_mode>1</light_mode>
			<max_height>72</max_height>
			<render_mono>0</render_mono>
			<render_non_aa>0</render_non_aa>
			<shadow>
				<offset_x>1</offset_x>
				<offset_y>1</offset_y>
				<alpha>24</alpha>
			</shadow>
			<subpixel_render>1</subpixel_render>
			<zero_alpha>0</zero_alpha>
		</font>
	</gdimm>
	
	<service>
		<poll_interval>0.5</poll_interval>
	</service>

	<exclude>
		<process>excluded\.exe</process>
		<font>excluded_font.*</font>
	</exclude>
</gdipp>